<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/menetap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/menetap"/>
    <TextView
        android:id="@+id/pmenetap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menetap"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="@string/pmenetap"/>
    <TextView
        android:id="@+id/pmenetap2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pmenetap"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="@string/pmenetap2"
        android:textSize="15sp" />
</RelativeLayout>